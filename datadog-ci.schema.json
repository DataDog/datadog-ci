          "type": "string"
        },
        "regExPattern": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "service": {
          "type": "string"
        },
        "sourceCodeIntegration": {
          "type": "boolean"
        },
        "uploadGitMetadata": {
          "type": "boolean"
        },
        "tracing": {
          "type": "boolean"
        },
        "version": {
          "type": "string"
        },
        "llmobs": {
          "type": "string"
        }
      }
    },
    "SyntheticsConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "apiKey": {
          "type": "string"
        },
        "appKey": {
          "type": "string"
        },
        "configPath": {
          "type": "string"
        },
        "datadogSite": {
          "type": "string"
