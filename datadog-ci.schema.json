        "captureLambdaPayload": {
          "type": "boolean"
        },
        "configPath": {
          "type": "string"
        },
        "dryRun": {
          "type": "boolean"
        },
        "environment": {
          "type": "string"
        },
        "extensionVersion": {
          "type": "string"
        },
        "extraTags": {
          "type": "string"
        },
        "flushMetricsToLogs": {
          "type": "boolean"
        },
        "forwarder": {
          "type": "string"
        },
        "functions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "interactive": {
          "type": "boolean"
        },
        "layerAWSAccount": {
          "type": "string"
