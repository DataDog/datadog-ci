          "type": "boolean"
        },
        "failOnTimeout": {
          "type": "boolean"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mobileApplicationVersion": {
          "type": "string"
        },
        "mobileApplicationVersionFilePath": {
          "type": "string"
        },
        "overrides": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "publicIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "selectiveRerun": {
          "type": "boolean"
        },
        "subdomain": {
          "type": "string"
        },
        "testSearchQuery": {
          "type": "string"
