{
  "compilerOptions": {
    "target": "es6",
    "typeRoots": ["./node_modules/@types/", "./src/types"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
